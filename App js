import { quizzes } from "./quizzes";
import { useState } from "react";
import QuizMap from "./QuizMap"; // ton composant avec Leaflet et GPS

export default function App() {
  const [selectedQuiz, setSelectedQuiz] = useState(null);

  if (!selectedQuiz) {
    return (
      <div className="flex flex-col items-center justify-center h-screen">
        <h1 className="text-2xl font-bold mb-4">Choisis ton parcours</h1>
        {Object.keys(quizzes).map((key) => (
          <button
            key={key}
            className="bg-blue-500 text-white px-4 py-2 rounded-lg mb-2"
            onClick={() => setSelectedQuiz(key)}
          >
            {key}
          </button>
        ))}
      </div>
    );
  }

  return <QuizMap steps={quizzes[selectedQuiz]} />;
}
